{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ads list</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th><br />
                <th>Title</th><br />
                <th>Description</th><br />
                <th>Expire date</th><br />
                <th>Creation date</th>

                <th>Actions</th><br />
            </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td><a href="{{ path('ad_show', { 'id': ad.id }) }}">{{ ad.id }}</a></td>
                <td>{{ ad.title }}</td>

                <td>
                {{ ad.description }}
                </td>
                <td>{% if ad.expireDate %}{{ ad.expireDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ ad.creationDate|date('Y-m-d H:i:s') }}</td>
                <td>
                    <ul>
                        <li>
                            <button><a href="{{ path('ad_show', { 'id': ad.id }) }}">show</a></button>
                        </li>
                        <li>
                            <button><a href="{{ path('ad_edit', { 'id': ad.id }) }}">edit</a></button>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ad_new') }}">Create a new ad</a>
        </li>
    </ul>
{% endblock %}
